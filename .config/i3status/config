# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#7CC844"
        color_bad = "#EF5253"
        color_degraded = "#E4B51C"
}

order += "battery all"
order += "load"
order += "volume master"
# order += "wireless wlp2s0"
order += "path_exists wireguard"
order += "tztime local"

battery all {
        format = "B: %percentage"
        integer_battery_capacity = true
        hide_seconds = true
        status_bat = ""
        status_chr = ""
        status_full = ""
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

wireless wlp2s0 {
        format_up = "%essid"
        format_down = "down"
}

path_exists wireguard {
        path = "/proc/sys/net/ipv4/conf/us15"
        format = "us15"
        format_down = "down"
}

load {
        format = "L: %1min"
}

volume master {
        format = "V: %volume"
        format_muted = "Muted"
        device = "pulse"
}
