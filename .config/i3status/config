# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = false
        interval = 5
        color_good = "#7CC844"
        color_bad = "#EF5253"
        color_degraded = "#E4B51C"
}

order += "battery all"
order += "load"
order += "volume master"
order += "tztime local"

battery all {
        format = "%status %percentage"
        integer_battery_capacity = true
        hide_seconds = true
        status_bat = "Battery"
        status_chr = "⚡"
        status_full = "Battery"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

load {
        format = "Load %1min"
}

volume master {
        format = "Volume %volume"
        format_muted = "Volume Muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
